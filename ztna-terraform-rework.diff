+ovf_2nic_local_path = "./200v-2-nic.ova"
+
+# OR use remote URLs
+# ovf_1nic_remote_url = "https://example.com/path/to/200v-1-nic.ova"
+# ovf_2nic_remote_url = "https://example.com/path/to/200v-2-nic.ova"
