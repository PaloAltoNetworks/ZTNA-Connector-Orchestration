+port1_ip       = "192.168.100.50"
+port1_subnet   = 24
+port1_gateway  = "192.168.100.1"
+port1_dns1     = "8.8.8.8"
+port1_dns2     = "8.8.4.4"
+
+license_key    = "your-license-key"
