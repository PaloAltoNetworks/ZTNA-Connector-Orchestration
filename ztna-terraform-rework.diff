+# port2_type    = "Static"
+# port2_ip      = "10.0.1.100"
+# port2_subnet  = 24
+# port2_gateway = "10.0.1.1"
+# port2_dns1    = "10.0.1.2"
+# port2_dns2    = "10.0.1.3"
